<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/process_view"
        android:layout_width="match_parent"
        style="@style/CalculatorProgramResultView"
        android:text="10 * 10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/result_view" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/result_view"
        android:layout_width="match_parent"
        style="@style/CalculatorProgramResultView"
        android:text="1,000"
        app:layout_constraintTop_toBottomOf="@id/process_view" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="4"
        android:rowCount="5"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result_view" >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_clean"
            android:text="C"
            style="@style/CalculationButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_percent"
            android:text="%"
            style="@style/CalculationButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_divide"
            android:text="÷"
            style="@style/CalculationButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_backspace"
            android:text="←"
            style="@style/CalculationButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bnt_7"
            android:text="7"
            style="@style/CalculationButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bnt_8"
            android:text="8"
            style="@style/CalculationButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_9"
            android:text="9"
            style="@style/CalculationButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bnt_multiply"
            android:text="×"
            style="@style/CalculationButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bnt_4"
            android:text="4"
            style="@style/CalculationButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bnt_5"
            android:text="5"
            style="@style/CalculationButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_6"
            android:text="6"
            style="@style/CalculationButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bnt_minus"
            android:text="-"
            style="@style/CalculationButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bnt_1"
            android:text="1"
            style="@style/CalculationButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bnt_2"
            android:text="2"
            style="@style/CalculationButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_3"
            android:text="3"
            style="@style/CalculationButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bnt_plus"
            android:text="+"
            style="@style/CalculationButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bnt_0"
            android:text="0"
            style="@style/CalculationButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bnt_00"
            android:text="00"
            style="@style/CalculationButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_dot"
            android:text="."
            style="@style/CalculationButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bnt_equals"
            android:text="="
            style="@style/CalculationButton" />


    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>